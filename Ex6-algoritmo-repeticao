Inicio

real notaA, notaB, notaC, notaD, maiorA=0, maiorB=0, maiorC=0, maiorD=0;
inteiro contador;
caractere nome;

maior = 0;

escreva("Turma A: \n");
para contador=0 ate contador=25 passo contador+1 faca

escreva("digite seu nome: \n");
leia(nome);

escreva("digite sua nota: \n");
leia(notaA);

se (notaA > 7)

escreva("O aluno nome foi aprovado!",nome);
fimse

se (notaA > maiorA)
maiorA=notaA;
fimse
fimpara
escreva("Maior nota da turma A: ",maiorA)


escreva("Turma B: \n");
para contador=0 ate contador=25 passo contador+1 faca

